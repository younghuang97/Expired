<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thele.expired.MainActivity">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/my_toolbar"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="61dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:onClick="goToGetActivity"
        android:text="Add" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:paddingLeft="25dp"/>

    <TextView
        android:id="@+id/name_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="25dp"
        android:text="Name" />

    <TextView
        android:id="@+id/expdate_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name_column"
        android:layout_alignBottom="@+id/name_column"
        android:layout_marginLeft="130dp"
        android:text="ExpDate" />

    <TextView
        android:id="@+id/purdate_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/expdate_column"
        android:layout_alignBottom="@+id/expdate_column"
        android:layout_marginLeft="265dp"
        android:text="PurDate" />

</RelativeLayout>
